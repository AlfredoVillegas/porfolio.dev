---
import LinkButton from './LinkButton.astro';
import Www from './icons/Www.astro';
import Youtube from './icons/Youtube.astro';

interface Props {
  title: string;
  description: string;
  link?: string;
  video?: string;
  date: string;
  isPresent?: boolean;
}

const { title, description, link, video, date, isPresent } = Astro.props;
---

<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"></div>
<div class="flex items-center gap-x-2">
  <time class="mb-1 text-sm font-normal leading-none text-sky-800 dark:text-sky-200/80">{date}</time>
  {isPresent && (
    <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">
      Actual
    </span>
  )}
</div>
<h3 class="text-lg font-semibold text-primary-200 mt-2">
  {title}
</h3>
<p class="mb-2 text-base font-normal dark:text-white/95 text-pretty">
  {description}
</p>
<slot />
<div class="flex gap-x-4">
  {
    link && (
      <>
        <LinkButton href={link}>
          <Www />
          Ir al sitio web
        </LinkButton>
      </>
    )
  }
  {
    video && (
      <>
        <LinkButton href={video}>
          <Youtube />
          Ver video presentaci√≥n
        </LinkButton>
      </>
    )
  }
</div>
